{
  "name": "@canopy-collective/canopy",
  "version": "0.0.0",
  "url": "git://github.com/canopy-collective/canopy.git",
  "scripts": {
    "commit": "npx git-cz",
    "ng": "ng",
    "start": "npm run storybook",
    "build": "ng build && npm run build-styles",
    "test": "ng test",
    "lint": "npm run tslint && npm run stylelint",
    "tslint": "ng lint",
    "e2e": "ng e2e",
    "storybook": "start-storybook",
    "stylelint": "stylelint \"projects/**/*.scss\"",
    "build-storybook": "build-storybook --quiet",
    "build-styles": "webpack --config ./webpack.scss.config.js",
    "pretty-quick": "pretty-quick"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~8.0.3",
    "@angular/common": "~8.0.3",
    "@angular/compiler": "~8.0.3",
    "@angular/core": "~8.0.3",
    "@angular/forms": "~8.0.3",
    "@angular/platform-browser": "~8.0.3",
    "@angular/platform-browser-dynamic": "~8.0.3",
    "@angular/router": "~8.0.3",
    "core-js": "^3.1.4",
    "rxjs": "~6.5.2",
    "tslib": "^1.10.0",
    "webpack": "^4.35.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular-devkit/build-ng-packagr": "~0.800.0",
    "@angular/cli": "~8.0.4",
    "@angular/compiler-cli": "~8.0.3",
    "@angular/language-service": "~8.0.3",
    "@babel/core": "^7.4.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/prompt": "^8.1.0",
    "@semantic-release/github": "^5.4.0",
    "@semantic-release/npm": "^5.1.12",
    "@storybook/addon-a11y": "^5.2.1",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-backgrounds": "^5.2.1",
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/addon-notes": "^5.2.1",
    "@storybook/addon-storysource": "^5.2.1",
    "@storybook/addon-viewport": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/angular": "^5.2.1",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~12.0.10",
    "babel-loader": "^8.0.6",
    "codelyzer": "^5.0.1",
    "color-convert": "^2.0.1",
    "commitizen": "^3.1.1",
    "css-vars-ponyfill": "^2.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "file-loader": "^4.0.0",
    "husky": "^2.6.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "ng-packagr": "^5.1.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "protractor": "~5.4.0",
    "semantic-release": "^15.13.19",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "ts-mockito": "^2.4.2",
    "ts-node": "~8.3.0",
    "tsickle": "^0.35.0",
    "tslint": "~5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "webpack-cli": "^3.3.5",
    "webpack-fix-style-only-entries": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{html, json, js}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{scss, css}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "src/**/*.ts": [
      "prettier --write",
      "tslint -p tsconfig.json -c tslint.json --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
